package-as: BookArchivist

enable-nolib-creation: no

manual-changelog:
    filename: CURSE_FORGE_RELEASE_CHANGELOG.md
    markup-type: markdown

ignore:
    # Development and test files
    - dev
    - tests
    - Tests
    - scripts
    - docs
    - libs/WoWUnit
    
    # Development documentation
    - AGENTS.md
    - ui/AGENTS.md
    - CHANGELOG.md
    - README.md
    - media
    - Makefile
    - .busted

    # Git and IDE
    - .git
    - .gitignore
    - .gitattributes
    - .vscode
    - .github
    
    # Release process files
    - .pkgmeta
    - BookArchivist_logo.png
