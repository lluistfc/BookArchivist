package-as: BookArchivist

enable-nolib-creation: no

externals:
  libs/AceComm-3.0:
    url: https://repos.curseforge.com/wow/ace3/trunk/AceComm-3.0
  libs/AceGUI-3.0:
    url: https://repos.curseforge.com/wow/ace3/trunk/AceGUI-3.0
  libs/AceSerializer-3.0:
    url: https://repos.curseforge.com/wow/ace3/trunk/AceSerializer-3.0
  libs/CallbackHandler-1.0:
    url: https://repos.curseforge.com/wow/callbackhandler/trunk/CallbackHandler-1.0
  libs/LibDataBroker-1.1:
    url: https://repos.curseforge.com/wow/libdatabroker-1-1
  libs/LibDBIcon-1.0:
    url: https://repos.curseforge.com/wow/libdbicon-1-0/trunk
  libs/LibDeflate:
    url: https://github.com/SafeteeWoW/LibDeflate
    tag: 1.0.2-release
  libs/LibStub:
    url: https://repos.curseforge.com/wow/libstub/trunk

manual-changelog:
    filename: CURSE_FORGE_RELEASE_CHANGELOG.md
    markup-type: markdown

ignore:
    # Development and test files
    - dev
    - Tests
    - tests
    - scripts
    - docs
    - coverage
    - libs/libs.json
    
    # Library development files
    - libs/LibDeflate/tests
    - libs/LibDeflate/examples
    - libs/LibDeflate/docs
    - libs/LibDeflate/.git
    - libs/LibDeflate/.github
    - libs/LibDeflate/.travis
    - libs/LibDeflate/.travis.yml
    - libs/LibDeflate/.appveyor
    - libs/LibDeflate/.appveyor.yml
    - libs/LibDeflate/.gitignore
    - libs/LibDeflate/.pkgmeta
    - libs/LibDeflate/.luacov
    - libs/LibDeflate/README.md
    - libs/LibDeflate/changelog.md
    - libs/LibDeflate/LICENSE.txt
    - libs/LibDeflate/*.rockspec
    - libs/LibDeflate/.luacheckrc
    - libs/LibStub/tests
    - libs/LibStub/.svn
    - libs/LibStub/.pkgmeta
    - libs/LibDBIcon-1.0/.pkgmeta
    - libs/LibDataBroker-1.1/README.textile
    
    # Remove embedded duplicates from LibDBIcon-1.0 (we load our own versions)
    - libs/LibDBIcon-1.0/LibStub
    - libs/LibDBIcon-1.0/CallbackHandler-1.0
    - libs/LibDBIcon-1.0/LibDataBroker-1.1
    - libs/LibDBIcon-1.0/embeds.xml
    - libs/LibDBIcon-1.0/LibDBIcon-1.0.toc

    # Development documentation
    - AGENTS.md
    - ui/AGENTS.md
    - CHANGELOG.md
    - README.md
    - media
    - Makefile
    - .busted
    - .env.dist
    - .luacov

    # Git and IDE
    - .git
    - .gitignore
    - .gitattributes
    - .vscode
    - .github
    - .claude
    
    # Release process files
    - .pkgmeta
    - BookArchivist_logo.png
