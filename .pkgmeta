package-as: BookArchivist

enable-nolib-creation: no

externals:
  libs/LibDataBroker-1.1:
    url: https://repos.curseforge.com/wow/libdatabroker-1-1
  libs/LibDBIcon-1.0:
    url: https://repos.curseforge.com/wow/libdbicon-1-0

manual-changelog:
    filename: CURSE_FORGE_RELEASE_CHANGELOG.md
    markup-type: markdown

ignore:
    # Development and test files
    - dev
    - Tests
    - scripts
    - docs
    - coverage
    - libs/libs.json
    
    # Development documentation
    - AGENTS.md
    - ui/AGENTS.md
    - CHANGELOG.md
    - README.md
    - media
    - Makefile
    - .busted
    - .env.dist
    - .luacov

    # Git and IDE
    - .git
    - .gitignore
    - .gitattributes
    - .vscode
    - .github
    - .claude
    
    # Release process files
    - .pkgmeta
    - BookArchivist_logo.png
